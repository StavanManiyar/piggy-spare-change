# Supabase Configuration
# Get these from https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: For production
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_256_bits_minimum
ENCRYPTION_MASTER_PASSWORD=your_master_encryption_password
ANONYMIZATION_KEY=your_data_anonymization_key
CERTIFICATE_KEY=your_certificate_signing_key

# Environment
NODE_ENV=production
VITE_APP_ENV=production

# Security Headers
VITE_DOMAIN=your-domain.com
VITE_API_DOMAIN=api.your-domain.com

# Rate Limiting
REDIS_URL=redis://your-redis-instance

# Payment Gateway (Razorpay - FREE for testing)
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id
VITE_RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Investment Platform (When you're ready to scale)
VITE_ZERODHA_API_KEY=your_zerodha_api_key
VITE_ZERODHA_API_SECRET=your_zerodha_api_secret

# External APIs (FREE tiers available)
VITE_NSE_API_KEY=your_nse_api_key
VITE_ALPHA_VANTAGE_KEY=your_alpha_vantage_key

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOGTAIL_TOKEN=your_logtail_token

# File Upload Security
CLAMAV_HOST=your_clamav_host
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# 2FA/OTP Services
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
MSG91_API_KEY=your_msg91_key
